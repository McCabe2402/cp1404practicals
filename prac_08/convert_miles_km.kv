BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            text: '0'
            font_size: 48
            multiline: False
            on_text: app.calculate_output()
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'Up'
                on_press: app.increment_value(1)
            Button:
                text: 'Down'
                on_press: app.increment_value(-1)
    Label:
        id: output_label
        font_size: 48
        text: '0.0'
        color: (1, 1, 0, 1)
