<ConvertMilesToKilometersApp>:
    orientation: 'vertical'
    padding: 10
    spacing: 10

    TextInput:
        id: miles_input
        multiline: False
        font_size: 24
        hint_text: "Enter miles"
        input_filter: 'float'
        on_text_validate: root.update_km()

    BoxLayout:
        orientation: 'horizontal'
        spacing: 10

        Button:
            text: 'Up'
            font_size: 18
            on_press: root.change_miles(1)

        Button:
            text: 'Down'
            font_size: 18
            on_press: root.change_miles(-1)

        Button:
            text: 'Convert'
            font_size: 18
            on_press: root.update_km()

    Label:
        text: 'Convert miles to km'
        font_size: 18

    Label:
        text: root.km_output
        font_size: 24
